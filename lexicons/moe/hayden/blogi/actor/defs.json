{
  "lexicon": 1,
  "id": "moe.hayden.blogi.actor.defs",
  "defs": {
    "profileView": {
      "type": "object",
      "required": ["did", "handle", "postsCount", "indexedAt"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "handle": { "type": "string", "format": "handle" },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64,
          "maxLength": 640
        },
        "description": {
          "type": "string",
          "maxGraphemes": 256,
          "maxLength": 2560
        },
        "postsCount": { "type": "integer" },
        "avatar": { "type": "string", "format": "uri" },
        "banner": { "type": "string", "format": "uri" },
        "indexedAt": { "type": "string", "format": "datetime" },
        "createdAt": { "type": "string", "format": "datetime" }
      }
    },

    "profileViewDetailed": {
      "type": "object",
      "required": ["did", "handle", "postsCount", "indexedAt"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "handle": { "type": "string", "format": "handle" },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64,
          "maxLength": 640
        },
        "description": {
          "type": "string",
          "maxGraphemes": 256,
          "maxLength": 2560
        },
        "postsCount": { "type": "integer" },
        "avatar": { "type": "string", "format": "uri" },
        "banner": { "type": "string", "format": "uri" },
        "indexedAt": { "type": "string", "format": "datetime" },
        "createdAt": { "type": "string", "format": "datetime" }
      }
    }
  }
}
