{
  "lexicon": 1,
  "id": "moe.hayden.blogi.blog.entry",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 1000
          },

          "content": {
            "type": "string",
            "maxLength": 100000
          },

          "status": {
            "type": "string",
            "enum": ["live", "draft"]
          },

          "visibility": {
            "type": "string",
            "enum": ["public", "unlisted"]
          },

          "createdAt": { "type": "string", "format": "datetime" },
          "updatedAt": { "type": "string", "format": "datetime" }
        }
      }
    }
  }
}
